{% extends 'base.html.twig' %}

{% block body %}

    <a class="btn btn-default" href="/">Back to home</a>
    {% if app.user.userInfo.id is defined %}
        <a class="btn btn-default" href="{{ path('profileEdit', {'id': app.user.userInfo.id}) }} ">Update profile</a>
    {% else %}
        <a href="{{ path('profileCreate') }}">Profilis</a>
    {% endif %}

    <hr>

  <h2 class="page header">Profile</h2>
    <ul class = list-group">
      <li class="list-group-item"> first name: {{ userInfo.firstName }}</li>
      <li class="list-group-item"> last name: {{ userInfo.lastName }}</li>
      <li class="list-group-item"> born at: <strong>{{ userInfo.bornAt|date('F j, Y, g:i, a')}}</strong></li>
    </ul>
{% endblock %}